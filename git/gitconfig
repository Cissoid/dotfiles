[core]
    editor = vim
[alias]
    br = branch
    st = status
    co = checkout
    ci = commit
    glog = log --all --graph --pretty='%C(auto)%h %d %s (%C(cyan)%an%Creset, %Cgreen%ad%Creset)'
    dsf = "!f() { git diff --color $@ | diff-so-fancy | less -RFX; }; f"
[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    pager = true
    showBranch = auto
    status = auto
    ui = auto
[grep]
    lineNumber = true
[log]
    date = "format:%Y-%m-%d %H:%M:%S"
[user]
	useConfigOnly = true
