# .bashrc
export LANG=en_US.utf8
export LC_TYPES=en_US.utf8

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# User specific aliases and functions
if [ -f `which powerline-daemon` ]; then
    flock -xn /tmp/powerline-daemon.lock powerline-daemon -q
    POWERLINE_BASH_CONTINUATION=1
    POWERLINE_BASH_SELECT=1
    python_site_path=`/usr/bin/python -c "from distutils.sysconfig import get_python_lib; print get_python_lib()"`
    . ${python_site_path}/powerline/bindings/bash/powerline.sh
fi

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
